<% provide(:title, 'Requests')%>
<h1>Requests</h1>

<%= link_to 'New Request', new_request_path %>

<table>
  <tr>
    <th>Customer</th>
    <th>Title</th>
    <th>Location</th>
    <th>Duedate</th>
    <th>Bclitem</th>
    <th></th>
    <th></th>
  </tr>

<% @requests.each do |request| %>
  <tr>
    <td><%= request.customer_id %></td>
    <td><%= request.title %></td>
    <td><%= request.location_id %></td>
    <td><%= request.duedate %></td>
    <td><%= request.bclitem %></td>
    <td><%= link_to 'Details', request_path(request) %></td>
    <td><%= link_to 'Update', edit_request_path(request) %></td>
  </tr>
<% end %>


</table>
<%= will_paginate %>

