<% provide(:title, 'Requests')%>
<h1>Requests</h1>

<%# will_paginate %>

<table>
  <tr>
    <th>Customer</th>
    <th>Oclcnum</th>
    <th>Title</th>
    <th>Author</th>
    <th>Pub</th>
    <th>Locationplaced</th>
