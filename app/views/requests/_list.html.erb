<table class="table">
  <tr>
    <th><%= link_to "Customer", sort: "customer_id" %></th>
    <th><%= link_to "Title", sort: "title" %></th>
    <th><%= link_to "Location Placed", sort: "locationplaced" %></th> 
	<th>Current Status</th>
    <th><%= link_to "Due Date", sort: "duedate" %></th>
    <th></th>
    <th></th>
  </tr>

<% @requests.each do |request| %>
  <tr>
    <td><%= link_to request.customer.full_name, customer_path(request.customer_id) %></td>
    <td><%= request.title %></td>
    <td><%= request.locationplaced %></td>
    <td><%= request.current_status(request) %></td>
    <td><%= request.duedate %></td>
    <td><%= link_to 'Details', request_path(request), class: "btn btn-small" %></td>
    <td><%= link_to 'Update', edit_request_path(request), class: "btn btn-small" %></td>
  </tr>
<% end %>


</table>
<%= will_paginate %>
